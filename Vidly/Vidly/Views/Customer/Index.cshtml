

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Customer</h2>
@Html.ActionLink("New", "New", "Customer", null, new { @class = "btn btn-primary" })

    <table id ="customer" class="table table-bordered">

        <thead>
            <tr>
                <th scope="col">Name </th>
                <th scope="col">Membership </th>
                <th scope="col">Action </th>

            </tr>
        </thead>
        <tbody>
           
        </tbody>

    </table>


@section Scripts
{
    <script>
        $(document).ready(function() {
            $("#customer").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""

                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "membershipType.membershipName"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<a href='customer/" + data + "'  class='btn btn-primary'>View</a>" +
                                "<button class='btn btn-link js-Delete' data-customer-id = " + data + ">Delete </button>";

                        }
                    }
                ]

            });


            $("#customer").on("click",
                ".js-Delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "api/customers/" + button.attr("data-customer-id"),
                                    method: "Delete",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });

    </script>


}
