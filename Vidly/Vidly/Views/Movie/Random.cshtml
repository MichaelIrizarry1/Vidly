@model Vidly.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>


@if (@Model.Customers.Count == 0)
{
    <p>Movie dont have customers</p>   
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>

        }
    </ul>
}