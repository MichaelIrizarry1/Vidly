

@{
    ViewBag.Title = "title";
    
}

<h2>Movies</h2>

@if (@Model.Count == 0 )
{
    <h3>There is not movies listed</h3>
}
else
{
    <table class="table table-hover">

        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name </th>
            <th scope="col">Action </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var movie  in @Model)
        {
            <tr class="table-active">

                <td>@movie.Id</td>
                <td>@movie.Name</td>

                <td><a href="movie/@movie.Id">View</a></td>
            </tr>
        }
        </tbody>

    </table>
}