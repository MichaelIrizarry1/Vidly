@{
}

<h3>Peliculas</h3>
@if (@Model.Count == 0)
{
    <h2>No hay peliculas</h2>
}
else
{
    <table class="table table-hover">

        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name </th>
            <th scope="col">Action </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var movie  in @Model)
        {
            <tr class="table-active">

                <td>@movie.Id</td>
                <td>@movie.Name</td>

                <td><a href="movie/@movie.Id">View</a></td>
            </tr>
        }
        </tbody>

    </table>
}